/* pages/book-time/book-time.wxss */

page {
  height: 100%;
}

.culinarian-cell {
  padding: 10px;
  /* border-bottom: 1px solid gainsboro; */
  height: auto;
  width: auto;
  display: block;
}

.culinarian-cell .time {
  display: flex;
  justify-content: space-around;
  justify-items: center;
}

.culinarian-cell .header {
  position: relative;
  margin-bottom: 5px;
  border-bottom: 1px solid gainsboro;
  height: 40px;
}

.culinarian-cell .header .weui-btn {
  position: absolute;
  top: -12px;
  right: 10px;
}

.culinarian-cell .header .title {
  font-size: 20px;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  letter-spacing: 2px;
  line-height: 19px;
  padding: 8px 0;
}

.culinarian-cell .status {
  font-size: 20px;
  position: absolute;
  top: 7px;
  right: 100px;
}

.culinarian-cell .ok {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 40px;
  line-height: 40px;
  color: #fff;
  background-color: #039cfd;
  text-align: center;
}

.modal {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.modal .mask {
  background-color: #6f6f6f;
  width: 100%;
  height: 100%;
  opacity: 0.8;
}

.modal .main {
  width: 80vw;
  height: 40vh;
  top: 20vh;
  position: absolute;
  left: 10vw;
}

.modal .main .top {
  height: 45%;
  background-color: #f17351;
  border-radius: 10px 10px 0 0;
}

.modal .main .bottom {
  height: 55%;
  background-color: #fff;
  border-radius: 0 0 10px 10px;
}
