/* components/home/content/hot/hot.wxss */
@import '/style/weui.wxss';
@import '/style/base.wxss';

.home-cell {
  padding: 10px;
  margin-bottom: 10px;
}

.title {
  font-size: 15px;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  letter-spacing: 2px;
  line-height: 19px;
  padding: 8px 0;
}

.content {
  height: 150px;
  display: webkit-flex;
  display: flex;
  justify-content: center;
  overflow: hidden;
  align-items: center;
}

.content .img {
  width: 100%;
}

.foot {
  height: 30px;
  width: 100%;
  position: relative;
}

.foot .img {
  height: 15px;
  width: 15px;
  position: absolute;
  left: 0;
  top: 11px;
}

.foot .address {
  height: 15px;
  line-height: 15px;
  font-size: 12px;
  position: absolute;
  left: 20px;
  top: 10px;
}

.foot .time {
  height: 15px;
  line-height: 15px;
  font-size: 15px;
  position: absolute;
  right: 50px;
  top: 10px;
}

.foot .like {
  height: 15px;
  width: 15px;
  position: absolute;
  right: 10px;
  top: 10px;
}
